# Copy this file to .env and fill in your values

# Google Maps API (required for route monitoring)
GOOGLE_API_KEY=your_google_maps_api_key_here

# Model Configuration
MODEL_DIR=models
FUSION_GB_WEIGHT=0.7
FUSION_IF_WEIGHT=0.3

# Risk Thresholds
SAFE_THRESHOLD=0.3
MEDIUM_THRESHOLD=0.7

# Route Anomaly Detection
ROUTE_BUFFER_DISTANCE=100
ROUTE_DEVIATION_CRITICAL=500
ROUTE_REROUTE_CHECK_INTERVAL=30

# Alert Configuration
CONSECUTIVE_HIGH_RISK_THRESHOLD=3
ALERT_COOLDOWN_PERIOD=30

# Feature Extraction
FEATURE_WINDOW_SIZE=10

# Logging
LOG_LEVEL=INFO
